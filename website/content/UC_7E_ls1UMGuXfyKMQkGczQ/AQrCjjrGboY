      $(window).resize(function() {
          playerResize();
      });
      function onPlayerReady(event) {
        var size = player.getSize();
        org_w = size.width;
        org_h = size.height;
        playerResize();
      }
      function playerResize() {
        var w = $(window).width();
        var ratio;
        if (org_w > w) {
            ratio = w / org_w * .97;
            player.setSize(org_w * ratio, org_h * ratio);
            $(".e").css("max-width", "90%");
        }
        else {
            ratio = w / (org_w * 2.5);
            player.setSize(org_w * ratio, org_h * ratio);
            $(".e").css("max-width", "50%");
        }
      }
